<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Displaymail">


    <TextView
        android:id="@+id/tvsender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="47dp"
        android:text="SenderName" />

    <TextView
        android:id="@+id/tvdisplayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvsender"
        android:layout_marginEnd="134dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="114dp"
        android:text="Subject" />

    <TextView
        android:id="@+id/tvdisplaysubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvdisplayname"
        android:layout_alignTop="@+id/tvsubject"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvdismessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvsender"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvdisplaymessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvdisplayname"
        android:layout_alignTop="@+id/tvdismessage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvcreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvsender"
        android:layout_alignParentTop="true"
        android:layout_marginTop="226dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvdisplaycreatedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvcreated"
        android:layout_marginEnd="143dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnfinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="178dp"
        android:layout_toStartOf="@+id/tvdisplayname"
        android:text="Close" />
</RelativeLayout>